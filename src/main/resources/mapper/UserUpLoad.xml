<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.UserFileDao">
    <!-- 目的：为DAO接口方法提供sql语句配置 -->
    <resultMap type="dao.UserFileDao" id="userFileMap">
        <id property="id" column="id" />
        <result property="filename" column="filename" />
        <result property="filesrc" column="filesrc" />
        <result property="newfilename" column="newfilename" />
    </resultMap>
    <insert id="savefile" parameterType="dao.UserFile">
        insert into upload(id,filename,filesrc,newfilename)
          values (null,#{filename},#{filesrc},#{newfilename})
    </insert>
    <select id="findfileSrc" parameterType="String" resultMap="userFileMap">
        select * from upload where filename  = #{filename}
    </select>
</mapper>